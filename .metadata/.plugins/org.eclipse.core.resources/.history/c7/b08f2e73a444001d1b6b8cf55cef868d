/**
 * 
 * @author Lucas Andrin
 * 
 * Crie uma classe que modele uma pessoa:
 * Atributos: nome, idade, peso e altura
 * MÃ©todos: Envelhercer, engordar, emagrecer, crescer.
 * Obs: Por padrÃ£o a cada ano que nossa pessoa envelhece e se a idade dela
 * for menor que 21 anos ela deve crescer 0,5 cm por ano.
 */
public class Pessoa {
	private String nome;
	private int idade;
	private float peso, altura;
	
	Pessoa(String nome, int idade, float peso, float altura) {
		setNome(nome);
		setIdade(idade);
		setPeso(peso);
		setAltura(altura);
	}
	
	public String getNome() {
		return nome;
	}
	
	public void setNome(String nome) {
		if (nome.trim().length() > 0) {
			this.nome = nome.trim();
		}
	}
	
	public int getIdade() {
		return idade;
	}
	
	public void setIdade(int idade) {
		this.idade = idade;
	}
	
	public float getPeso() {
		return peso;
	}
	
	public void setPeso(float peso) {
		this.peso = peso;
	}
	
	public float getAltura() {
		return altura;
	}
	
	public void setAltura(float altura) {
		this.altura = altura;
	}
	
	
}
